<Page x:Class="Opencv_Pj.Classify"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Opencv_Pj"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="Classify">

    <Grid Background="#FFF3F3F3">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="Recognize_btn" Content="Capture" Margin="0,0,23,34" FontSize="20" Click="Recognize_btn_Click" Height="48" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="175" Background="#FFB4B4B4" FontFamily="Arial Black"/>
        <Image x:Name="CardPhoto" Margin="0,0,306,34" HorizontalAlignment="Right" Width="364" Height="344" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="Information_box" Margin="0,15,23,98" TextWrapping="Wrap" Background="#FFD9D9D9" HorizontalAlignment="Right" Width="263"/>
        <Button x:Name="Back_btn" Content="" HorizontalAlignment="Right" Height="48" Margin="0,0,203,34" VerticalAlignment="Bottom" Width="83" FontWeight="Bold" FontSize="20" Click="Back_btn_Click">
            <Button.Background>
                <ImageBrush ImageSource="/back.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Page>
