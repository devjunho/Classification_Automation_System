<Page x:Class="Opencv_Pj.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Opencv_Pj"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="Menu">

    <Grid Background="#FFF3F3F3">
        <Button x:Name="Classify_btn" Content="신분증 검출" Margin="0,131,0,0" Click="Button_Click" Background="#FFB4B4B4" FontSize="20" HorizontalAlignment="Center" Width="344" Height="68" VerticalAlignment="Top"/>
        <Button x:Name="Past_btn" Content="과거 인식 정보" Margin="0,225,0,0" Background="#FFB4B4B4" FontSize="20" Click="Past_btn_Click" HorizontalAlignment="Center" Width="344" Height="68" VerticalAlignment="Top"/>
        <Label x:Name="Title" Content="신분증 인식하기" Margin="0,44,0,0" FontSize="36" FontWeight="Bold" FontFamily="Arial Black" RenderTransformOrigin="0.531,0.173" HorizontalAlignment="Center" Width="276" Height="59" VerticalAlignment="Top"/>
        <Button x:Name="Graph_btn" Content="그래프 수치화" Margin="0,318,0,0" FontSize="20" Background="#FFB4B4B4" Click="Graph_btn_Click" HorizontalAlignment="Center" Width="344" Height="68" VerticalAlignment="Top"/>
    </Grid>
</Page>
